    SELECT * FROM TALUNO;

    --  ALTER TABLE TALUNO DROP COLUMN COLUNA;
    ALTER TABLE TALUNO ADD ESTADO CHAR(2) DEFAULT 'RS';

    ALTER TABLE TALUNO ADD SALARIO NUMBER(0,2) DEFAULT 620;

    UPDATE TALUNO SET
    ESTADO = 'AC'
    SALARIO = 250
    WHERE COD_aluno = 1;

    UPDATE TALUNO SET
    ESTADO = 'MT', SALARIO = 2000
    WHERE COD_ALUNO = 2;

    UPDATE TALUNO SET
    ESTADO = 'SP',SALARIO = 800
    WHERE COD_ALUNO = 5;

    SELECT * FROM TALUNO;

    COMMIT;

    SELECT * FROM TALUNO
    WHERE ESTADO <> 'RS'
    AND SALARIO <= 800
    ORDER BY SALARIO DESC;

    INSERT INTO TALUNO(COD_ALUNO, NOME,CIDADE)
    VALUES(SEQ_ALUNO,NEXTVAL,'VALDO','DOIS IRMAOS');


    INSERT INTO TALUNO(COD_ALUNO, NOME,CIDADE)
    VALUES(SEQ_ALUNO,NEXTVAL,'ALDO','QUATRO IRMAOS');

    SELECT * FROM TALUNO;

    UPDATE TALUNO SET
    ESTADO = 'SP',SALARIO = 900,NOME = 'PEDRO'
    WHERE COD_ALUNO = 5;














